<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaxSystem</title>
    <link rel="stylesheet" href="~/css/superhero.css" />
    <link rel="stylesheet" href="~/css/superhero.css" asp-append-version="true" />
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">

                <li class="nav-item remove-dot">
                    <a class="nav-link" asp-controller="Amenity" asp-action="All">Възможни услуги</a>
                </li>

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item remove-dot">
                        <a class ="nav-link" asp-controller="Admin" asp-action="AllUsers">Всички потребители</a>
                    </li>
                    <li class="nav-item remove-dot">
                        <a class="nav-link" asp-controller="Desk" asp-action="All">Всички бюра</a>
                    </li>
                }

                @if (User.IsInRole("User"))
                {
                    <li class="nav-item remove-dot">
                        <a class="nav-link" asp-controller="User" asp-action="RequestSer">Заяви услуга</a>
                    </li>
                    <li class="nav-item remove-dot">
                        <a class="nav-link" asp-controller="User" asp-action="All">Моите заявки</a>
                    </li>
                }

                @if (User.IsInRole("Worker"))
                {
                    <li class="nav-item remove-dot">
                        <a class="nav-link" asp-controller="Worker" asp-action="RequestsByWorker" asp-route-completed="true">Завършени заявки</a>
                    </li>
                    <li class="nav-item remove-dot">
                        <a class="nav-link" asp-controller="Worker" asp-action="RequestsByWorker" asp-route-completed="false">Незавършени заявки</a>
                    </li>
                }
                <div class="right">
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
