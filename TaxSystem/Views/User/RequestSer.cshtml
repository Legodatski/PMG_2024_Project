@model AddRequestViewModel

@{
    ViewData["Title"] = "Request a service";
}



<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="addForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label>Worker</label>
            <select asp-for="ServiceName" class="form-control">
                @foreach (var w in Model.Services)
                {
                    <option value="@w">@w</option>
                }
            </select>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}