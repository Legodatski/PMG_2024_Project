@model RemoveDeskServiceViewModel

@{
    ViewData["Title"] = "Премахни услуга";
    int deskId = int.Parse(Url.RouteUrl(ViewContext.RouteData.Values).Last().ToString());
    Model.DeskId = deskId;
}



<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="addForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="ServiceName"></label>
            <select asp-for="ServiceName" class="form-control">
                @foreach (var w in Model.ServicesNames)
                {
                    <option value="@w">@w</option>
                }
            </select>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Премахни</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
