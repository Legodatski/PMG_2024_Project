@model IEnumerable<TaxSystem.Data.Request>

@{
    ViewData["Title"] = "Заявки";
}

<h1> @ViewData["Title"] </h1>

<table class="table">
    <thead>
        <tr>
            <th>Първо име на клента</th>
            <th>Фамилия на клиента</th>
            <th>Телефон на клиента</th>
            <th>Има на услугата</th>
            <th>Час за започване</th>
            <th>Завършеност</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                <a asp-action="Complete" asp-route-id="@item.Id" method="post">Завърши услугата</a>
            </td>
        </tr>
}
    </tbody>
</table>
