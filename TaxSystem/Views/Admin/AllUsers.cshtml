@model AllUsersQueryModel

<hr />

<form method="get">
        <div class="form-group col-md-3">
            <label asp-for="SearchTerm">Търси по</label>
            <input asp-for="SearchTerm" class="form-control" placeholder="...">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="RoleName">Role</label>
            <input asp-for="RoleName" class="form-control" placeholder="...">
        </div>
        <div class="col-md-3">
            <div class="form-group mt-4 p-2"> <input type="submit" value="Търси" class="btn btn-primary" /></div>
        </div>
    </div>

</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.Users.Count() / Model.UsersPerPage);
}


@if (Model.Users.Count() == 0)
{
    <div>Няма подходящи книги за теб.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(x => user.UserName);
                    </th>
                    <th>
                        @Html.DisplayFor(x => user.FirstName);
                    </th>
                    <th>
                        @Html.DisplayFor(x => user.LastName);
                    </th>
                    <th>
                        @Html.DisplayFor(x => user.Email);
                    </th>
                    <th>
                        @Html.DisplayFor(x => user.PhoneNumber);
                    </th>
                </tr>
            }
        </tbody>
    </table>
}